.product-page {
  padding-top: 4rem; }
  .product-page .banner {
    height: 20rem;
    position: relative; }
    .product-page .banner img {
      display: block;
      height: 100%;
      width: 100%;
      margin: 0 auto;
      object-fit: cover; }
    .product-page .banner h1 {
      position: absolute;
      top: 50%;
      left: 0;
      width: 100%;
      text-align: center;
      transform: translateY(-50%);
      font-size: 2rem;
      color: var(--color-white);
      text-shadow: 0 0 30px var(--color-black); }
  .product-page .container {
    padding: 1rem;
    display: flex; }
    .product-page .container .side-menu {
      width: 15rem;
      flex-shrink: 0; }
      .product-page .container .side-menu > .title {
        font-size: 1.6rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--color-secondary);
        margin-bottom: 6px; }
      .product-page .container .side-menu .list {
        font-size: 1.2rem;
        padding-top: 0.2rem; }
        .product-page .container .side-menu .list li {
          cursor: pointer;
          font-size: 1.2rem; }
          .product-page .container .side-menu .list li > div {
            position: relative;
            display: flex;
            padding-left: 1.2rem;
            padding: 0.5rem 0.5rem 0.5rem 1.5rem;
            border-radius: 4px; }
            .product-page .container .side-menu .list li > div i {
              width: 1.5rem;
              height: 2.2rem;
              font-size: 1rem;
              display: flex;
              justify-content: center;
              align-items: center;
              position: absolute;
              top: 0;
              left: 0; }
            .product-page .container .side-menu .list li > div:hover {
              background-color: var(--color-secondary);
              color: var(--color-primary);
              transition: all 0.1s linear; }
          .product-page .container .side-menu .list li > .list {
            padding-left: 1.5rem;
            font-size: 1.2rem;
            display: none; }
            .product-page .container .side-menu .list li > .list li {
              padding-left: 0;
              padding-right: 0; }
          .product-page .container .side-menu .list li.open > div i {
            transform: rotate(90deg); }
          .product-page .container .side-menu .list li.open > .list {
            display: block; }
    .product-page .container .main {
      flex-grow: 1;
      margin-left: 3rem; }
      .product-page .container .main > .title {
        font-size: 1.6rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--color-secondary); }
      .product-page .container .main > .content {
        margin-top: 1rem;
        color: var(--color-grey-2);
        line-height: 1.25; }
        .product-page .container .main > .content p {
          line-height: inherit; }

@media only screen and (max-width: 1000px) {
  html .product-page .container {
    flex-direction: column; }
    html .product-page .container .side-menu,
    html .product-page .container .main {
      width: 100%;
      margin: 0 0 2rem; } }
